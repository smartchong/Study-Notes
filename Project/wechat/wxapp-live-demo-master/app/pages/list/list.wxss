page {
  background-color: #fafafa;
}

.container {
  width: 100wh;
  max-height: 100vh;
  padding: 0;
  display: flex;
  flex-direction: column;
}

.active-list {
  width: 100vw;
  height: 92vh;
}

.blank {
  width: 100vw;
  height: 10vh;
}

.noactive {
  height: 300rpx;
  width: 300rpx;
  margin-top: calc(50% - 150rpx);
  font-size: 40rpx;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;

  color: rgba(27,30,34,0.47);
  letter-spacing: -0.57px;
}

.noactive_tv {
  width: 50%;
  margin: auto;
}

.livebtn {
  height: 8vh;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  background: #fff;
  box-shadow: 0px -2px 2px rgba(0, 0, 0, .04);
}

.livebtn-content {
  width: 160rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.livebtn__text {
  font-size: 28rpx;
}

.livebtn__icon {
  height: 24rpx;
  width: 32rpx;
}
