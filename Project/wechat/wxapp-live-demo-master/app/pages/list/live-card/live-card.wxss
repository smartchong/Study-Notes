.live-card {
  width: 100%;
  height: 700rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  background: #fff;
}

.cover {
  height: 600rpx;
  width: 100%;
  background: linear-gradient(to right, #434343, #000000);

}

.cover__img {
  width: 100%;
  height: 100%;
}

.status {
  width: 120rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  border: 2rpx solid rgba(255, 255, 255, .8);
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6rpx 8rpx;
  box-sizing: border-box;
  box-shadow: 0 0 4px rgba(0, 0, 0, .3);
}

.status__icon {
  width: 10rpx;
  height: 10rpx;
  border-radius: 5rpx;
  background-color: #666;
}

.status__icon.active {
  background-color: #00ee00;
}

.status__text {
  font-size: 26rpx;
  color: #fff;
  text-shadow: 0 2px 4px rgba(0,0,0,0.50);
}

.bottom {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.avatar__img {
  width: 100%;
  height: 100%;
}

.content {
  display: flex;
  height: 70rpx;
  justify-content: space-between;
  flex-direction: column;
}

.content__title {
  font-size: 30rpx;
  color: #000;
  text-align: left;
}

.content__name {
  font-size: 22rpx;
  color: rgba(0, 0, 0, .8);
  text-align: left;
}

.blank {
  flex: 1;
}

.share {
  width: 70rpx;
  height: 70rpx;
  position: relative;
}

.sharebtn {
  width: 100%;
  border: none;
  opacity: 0;
  z-index: 10;
  height: 100%;
}

.shareimg {
  width: 60%;
  height: 60%;
  position: absolute;
  top: 20%;
  left: 20%;
}
