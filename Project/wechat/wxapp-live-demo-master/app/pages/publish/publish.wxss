#pusher {
  width: 100%;
  height: 100%;
}

.publish-page {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.publish-control {
  width: 100%;
  height: 250rpx;
  background: linear-gradient(-180deg, rgba(0,0,0,0.00) 0%, rgba(0,0,0,0.24) 100%);
  transform: translateY( 250rpx);
  opacity: 0;
  transition: all ease 0.4s;
  position: absolute;
  bottom: 0;
  left: 0;
}

.publish-page.active .publish-control {
  opacity: 1;
  transform: translateY(0);
}

.switchbtn {
  width: 80rpx;
  height: 80rpx;
  left: 80rpx;
  top: 100rpx;
  position: absolute;
}

.exitbtn {
  width: 80rpx;
  height: 80rpx;
  right: 80rpx;
  top: 100rpx;
  position: absolute;
}

.magicbtn {
  width: 80rpx;
  height: 80rpx;
  right: 335rpx;
  top: 100rpx;
  position: absolute;
}

.control__mode {
  position: absolute;
  right: 305rpx;
  top: 20rpx;
  width: 120rpx;
  color: #fff;
  font-size: 20rpx;
  background: rgba(74, 74, 74, .46);
  border: 1px solid #D4D4D4;
  border-radius: 20rpx;
  text-align: center;
  padding: 10rpx;
}

.wrapper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
