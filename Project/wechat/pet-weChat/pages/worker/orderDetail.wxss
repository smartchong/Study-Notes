/* pages/worker/orderDetail.wxss */
.order-details{
  height: 100%;
  background-color: #eee;
}

.video-wrap {
  width: 100%;
}

.order-detail-video {
  width: 100%;
  height: 200px;
}

.view-tips{
  width: 100%;
  height: 24px;
  margin-top: -6px;
  line-height: 24px;
  font-size: 12px;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.area{
  position: relative;
  background-color: #fff;
  padding: 10px;
  margin-bottom: 10px;
}

.video-list-swiper{
  height: 105px;
}

.video-list{
  height: 105px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.video-list-item{
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-video-tips{
  font-size: 16px;
}

.scroll-video-list{
  height: 125px;
}

.status-image{
  position: absolute;
  top: 10px;
  right: 10px;
  width: 35px;
  height: 30px;
}

.swiper-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tips-image{
  width: 12px;
  height: 12px;
  margin-left: 10px;
}

.video-cover-image{
  width: 100px;
  height: 60px;
}

.video-cover-text{
  width: 100px;
  word-break: break-all;
}

.addr-image{
  width: 16px;
  height: 21px;
}

.goods-image{
  width: 90px;
  height: 90px;
  border-radius: 4px;
}

.area-text{
  font-size: 12px;
  color:#666;
  line-height: 2;
}

.area-text-compact{
  font-size: 12px;
  color:#666;
  line-height: 1.5;
}

.red-font{
  color:#cb342e;
}

.flex-row{
  display: flex;
  flex-direction: row;
}

.flex-column{
  display: flex;
  flex-direction: column;
}

.flex-center{
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-end{
  display: flex;
  justify-content: flex-end;
}

.padding-left-20{
  padding-left: 10px;
}

.margin-left-30{
  margin-left: 15px;
}

.bold-font{
  font-size: 14px;
  color:#333;
}

.width10{
  width: 10%;
}

.width40{
  width: 40%;
  text-align: right;
}

.width25{
  width: 25%;
}

.width75{
  width: 75%;
}

.width60{
  width: 60%;
}

.width90{
  width: 90%;
}