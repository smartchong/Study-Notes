/* pages/owner/orderList.wxss */
.order-list-wrap{
  height: calc(100vh - 108rpx);
  overflow-y: auto;
}

.bgeee{
  background-color: #eee;
  line-height: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.list-container{
  margin: 10px 10px 0;
  height: 126px;
}

.list-box{
  box-sizing: border-box;
  padding: 0 10px;
  background-color: #fff;
  border-radius:5px;
  overflow: hidden;
}

.flex-space-between{
  display: flex;
  justify-content: space-between;
}

.list-header{
  position: relative;
  height: 40px;
  border-bottom: 1px solid #e5e5e5;
  line-height: 40px;
}

.width500{
  width: 500rpx;
}

.list-footer{
  height: 36px;
  border-top: 1px solid #e5e5e5;
  line-height: 36px;
}

.list-text-sm{
  font-size: 12px;
  color:#666;
}

.list-text{
  font-size: 12px;
  color:#666;
  line-height: 2;
}

.bold-font{
  color: #333;
}

.red-font{
  color: #dd1820;
}

.slot-after{
  height: 138rpx;
}

.status-image{
  position: absolute;
  top: 5px;
  right: 0;
  width: 35px;
  height: 30px;
}

.no-order{
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.no-order-image{
  width: 123px;
  height: 158px;
}

.no-order-desc{
  margin-top: 25px;
  font-size: 14px;
  color: #666;
}